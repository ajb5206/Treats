@{
	Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h4>Add a new Treat</h4>

@using(Html.BeginForm())
{
	@Html.LabelFor(model => model.TreatName)
	@Html.TextBoxFor(m => m.TreatName)
	@Html.LabelFor(model => model.TreatDescription)
	@Html.TextBoxFor(m => m.TreatDescription)


	<input type="submit" value="Add new Treat" />
}

<p>@Html.ActionLink("Show all treats", "Index")</p>