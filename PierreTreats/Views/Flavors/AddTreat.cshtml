@model PierreTreats.Models.Flavor

<h2>Add a Treat that includes this flavor</h2>

<h4>Add the treat: @Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  <label for="TreatId">Select Treat:</label>
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>