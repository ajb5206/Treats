@model PierreTreats.Models.Flavor

<h2> Add a Flavor </h2>
@using (Html.BeginForm())
{
  <label for="FlavorName"> Flavor Name: </label>
  @Html.TextBoxFor(model => model.FlavorName)
  <label for="FlavorDescription"> Description: </label>
  @Html.TextBoxFor(model => model.FlavorDescription)
  <input type="submit" value="Add Flavor" class="btn btn-default"/>
}
<p>@Html.ActionLink("Flavors List", "Index")</p>