@{
	Layout = "_Layout";
}

@using PierreTreats.Models;
@model List<PierreTreats.Models.Flavor>;
@using (Html.BeginForm())
{
	<p>Title : @Html.TextBox("SearchString")
	<input type = "submit" value = "Search"/> </p>
}

	<h1>Flavors</h1>

	@if (@Model.Count == 0)
	{
		<h3>No flavors have been added yet!</h3>
	}

@foreach (Flavor flavor in Model)
{
	<li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId})</li>
}

<p>@Html.ActionLink("Add a new flavor", "Create")</p>
<p>@Html.ActionLink("Back to list of treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Back to the home page", "Index", "Home")</p>